# ========================
# AgentK Configuration
# ========================

# Server Configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database Configuration
DATABASE_URL=sqlite:///./data/agentk.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# LM Studio Configuration
LM_STUDIO_BASE_URL=http://localhost:1234
LM_STUDIO_TIMEOUT=30
LM_STUDIO_MAX_RETRIES=3

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TIMEOUT=30
OLLAMA_MAX_RETRIES=3

# Security Configuration
SECRET_KEY=agentk-super-secret-key-change-in-production-2024
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440  # 24 hours
BCRYPT_ROUNDS=12

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=.txt,.pdf,.docx,.md,.json,.csv,.py,.js,.html,.css,.jpg,.png,.jpeg

# Memory Configuration
VECTOR_STORE_TYPE=chroma  # chroma or qdrant
VECTOR_STORE_PATH=./data/memory/chroma
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300  # 5 minutes

# Plugin System
PLUGINS_ENABLED=true
PLUGINS_DIR=./plugins/custom_plugins

# Development Settings (not for production)
DEBUG=true
RELOAD=true