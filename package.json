{
  "name": "agentk",
  "version": "0.1.0",
  "description": "Local AI Automation Platform - Completely free, local, no-cloud API, LM Studio-friendly automaton agent platform",
  "main": "frontend/js/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "live-server frontend --port=3000 --open",
    "dev:backend": "cd backend && python -m uvicorn main:app --reload --port=8000",
    "build": "echo 'No build process needed for pure frontend'",
    "start": "node scripts/start.js",
    "install:dev": "./scripts/install.sh",
    "test": "echo 'Run specific test suites: test:frontend, test:backend'",
    "test:frontend": "echo 'Frontend tests would run here'",
    "test:backend": "cd backend && python -m pytest",
    "docker:build": "docker build -t agentk .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "keywords": [
    "ai",
    "agents",
    "local",
    "automation",
    "lm-studio",
    "ollama",
    "open-source"
  ],
  "author": "AgentK Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "live-server": "^1.2.2",
    "webpack-cli": "^6.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/agentk.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/agentk/issues"
  },
  "homepage": "https://github.com/your-username/agentk#readme"
}
